{
  "manifest_version": 3,
  "name": "AIAmigo",
  "version": "1.0",
  "description": "AIAmigo overv√•ger brugerens input.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["assets/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "icon/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage"]
}