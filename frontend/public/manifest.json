{
  "manifest_version": 3,
  "name": "AIAmigo",
  "version": "1.0",
  "description": "AIAmigo overv√•ger brugerens input.",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "risk-module.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "DialogModul.js",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"]
}